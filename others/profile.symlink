# ~/.profile: executed by Bourne-compatible login shells.
# This file must have the stuff NOT specifically related to bash, such as environment variables (PATH and friends)

if [ "$BASH" ]; then
  if [ -f ~/.bashrc ]; then
    . ~/.bashrc
  fi
fi

mesg n

mkdir -p "$HOME/.cache"

export HISTFILE="$HOME/.cache/bash_history"
